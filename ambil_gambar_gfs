from selenium import webdriver
from selenium.webdriver.chrome.service import Service
from selenium.webdriver.chrome.options import Options
import time
import datetime

# setup browser
chrome_options = Options()
chrome_options.add_argument("--headless")  # jalan tanpa buka jendela
driver = webdriver.Chrome(options=chrome_options)

# buka windy dengan koordinat Dago, Bandung
url = "https://www.windy.com/-6.935/107.606/gfs?gfs,rh,-7.331,107.606,9,m:dtBai8v"
driver.get(url)

time.sleep(10)  # tunggu biar data muncul

# simpan screenshot
today = datetime.date.today().strftime("%Y-%m-%d")
driver.save_screenshot(f"screenshots/weather_{today}.png")

driver.quit()
print("Screenshot berhasil disimpan!")
